---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = 'BlackGnome', description = 'Black Gnome Band' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/png" href={`${import.meta.env.BASE_URL}favicon.png`} />

    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.0.13/css/all.css"
      integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
      crossorigin="anonymous"
    />

    <!-- Google Analytics -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=UA-131326927-1"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        // eslint-disable-next-line no-undef
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'UA-131326927-1');
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
